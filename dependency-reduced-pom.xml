<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>auth-tree-node-parent</artifactId>
    <groupId>org.forgerock.am</groupId>
    <version>6.0.0</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sinch</groupId>
  <artifactId>sinchAuthNode</artifactId>
  <name>Template for an Auth Tree Node maven project</name>
  <version>1.0.0-SNAPSHOT</version>
  <description>An Authentication Tree Node for ForgeRock's Identity Platform</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.sinch.jvm.sdk.verification:library</include>
                  <include>org.jetbrains.kotlin:kotlin-stdlib</include>
                  <include>com.squareup.okhttp3:logging-interceptor</include>
                  <include>com.squareup.okhttp3:okhttp</include>
                  <include>com.jakewharton.retrofit:retrofit2-kotlinx-serialization-converter</include>
                  <include>com.squareup.retrofit2:retrofit</include>
                  <include>org.jetbrains.kotlinx:kotlinx-serialization-runtime</include>
                  <include>com.squareup.okio:okio</include>
                </includes>
              </artifactSet>
              <filters>
                <filter>
                  <artifact>com.sinch:library</artifact>
                  <excludes>
                    <exclude>META-INF/MANIFEST.MF</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>bintray-kotlin-kotlinx</id>
      <name>bintray</name>
      <url>https://kotlin.bintray.com/kotlinx</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>forgerock-private-releases</id>
      <name>ForgeRock Private Release Repository</name>
      <url>http://maven.forgerock.org/repo/private-releases</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.forgerock.am</groupId>
      <artifactId>auth-node-api</artifactId>
      <version>6.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jetbrains.kotlinx</groupId>
      <artifactId>kotlinx-serialization-cbor</artifactId>
      <version>1.0.1</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.am</groupId>
      <artifactId>openam-guice-core</artifactId>
      <version>6.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.am</groupId>
      <artifactId>openam-core</artifactId>
      <version>6.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.am</groupId>
      <artifactId>openam-scripting</artifactId>
      <version>6.0.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>3.6.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.commons</groupId>
      <artifactId>forgerock-test-utils</artifactId>
      <version>23.0.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.am</groupId>
      <artifactId>openam-core</artifactId>
      <version>6.0.0</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
